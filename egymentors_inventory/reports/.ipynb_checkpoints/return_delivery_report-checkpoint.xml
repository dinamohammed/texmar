<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_delivery_document">
        <t t-call="web.html_container">
            <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)" />
            <t t-if="o.picking_type_id.code == 'outgoing'" t-call="egymentors_inventory.return_order_layout">
                <t t-set="partner" t-value="o.partner_id or (o.move_lines and o.move_lines[0].partner_id) or False"/>
                <!-- RETURN -->
                <div class="page" style="font-size:24px;">
                    <div class="oe_structure"/>
                    
                    <!-- Delivery Reference -->    
                    <h1><span t-field="o.name"/></h1>
                    
                <div class="row" style="margin-top:40px;">
                    <!-- Customer Details -->
                    <div class="col-6">
                        <strong style='font-size:20px;'>Vendor:</strong>
                        <p style='font-size:20px; font-weight:bold' t-field="o.partner_id.name"/>
                        <strong style='font-size:20px;'>Reference: </strong><span style='font-size:20px;' t-field="o.partner_id.ref"/>
                        <p style='font-size:20px;' t-field="o.partner_id.street"/>
                        <p style='font-size:20px;' t-field="o.partner_id.country_id.name"/>
                        <p style='font-size:20px;' t-field="o.partner_id.phone"/>
                        <p style='font-size:20px;' t-field="o.partner_id.vat"/>
                    </div>
                    <!-- Shipping Details -->
                    <div class="col-6">
                        <strong style='font-size:20px;'>Shipping Address:</strong>
                        <p style='font-size:20px; font-weight:bold' t-field="o.picking_type_id.warehouse_id.display_name"/>
                        <p style='font-size:20px;' t-field="o.picking_type_id.warehouse_id.partner_id.street"/>
                        <p style='font-size:20px;' t-field="o.picking_type_id.warehouse_id.partner_id.city"/>
                        <p style='font-size:20px;' t-field="o.picking_type_id.warehouse_id.partner_id.country_id.name"/>
                        <p style='font-size:20px;' t-field="o.picking_type_id.warehouse_id.partner_id.phone"/>
                    </div>
                </div>
                
                <!-- Info Div -->
                <div id="information" class="row mt32 mb32" style="margin-top:40px;">
                    <!-- Shipping Date -->
                    <div class="col-3 bm-2">
                        <strong style='font-size:20px;'>Shipping Date:</strong>
                        <p style='font-size:20px;' t-field="o.scheduled_date" t-options='{"widget":"date"}' class="m-0"/>
                    </div>
                    <!-- PO Number -->
                    <div class="col-3 bm-2">
                        <strong style='font-size:20px;'>PO Number:</strong>
                        <p style='font-size:20px;' t-field="o.purchase_id.name" class="m-0"/>
                    </div>
                    <!-- Location -->
                    <div class="col-3 bm-2">
                        <strong style='font-size:20px;'>Location:</strong>
                        <p style='font-size:20px;' t-field="o.location_dest_id" class="m-0"/>
                    </div>
                    <!-- User Receiving -->
                    <div class="col-3 bm-2">
                        <strong style='font-size:20px;'>Delivery Person:</strong>
                        <p style='font-size:20px;'  t-field="o.purchase_id and o.purchase_id.user_id and o.purchase_id.user_id.name" class="m-0"/>
                    </div>
                </div>                    

                <!-- Table -->
                <div class="row">
                    <table class="table" style="width:100%;">
                        <thead> 
                            <tr>
                                <td style="font-size:20px;text-align:center;">Code <br/> كود </td>
                                <td style="font-size:20px;text-align:center;"></td>
                                <td style="font-size:20px;text-align:center;"></td>
                                <td style="font-size:20px;text-align:center;">Description <br/> اسم الصنف </td>
                                <td style="font-size:20px;text-align:center;"></td>
                                <td style="font-size:20px;text-align:center;">Unit <br/> الوحده </td>
                                <td style="font-size:20px;text-align:center;"></td>
                                <td style="font-size:20px;text-align:center;">Quantity <br/> الكمية </td>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="total_qty" t-value="0.0"/>
                            <!-- Loop Order Lines -->
                            <t t-foreach="o.move_ids_without_package" t-as="line">
                                <tr>
                                    <!-- Code -->
                                    <td style="font-size:20px;text-align:center;"><span t-esc="line.product_id.default_code"/></td>
                                    <td style="font-size:20px;text-align:center;"></td>
                                    <td style="font-size:20px;text-align:center;"></td>
                                    <!-- Description + Width -->
                                    <td style="font-size:20px;text-align:center;"><span t-field="line.product_id.name"/><br/><span t-esc="line.product_id.texmar_width"/></td>
                                    <td style="font-size:20px;text-align:center;"></td>
                                    <!-- Unit -->
                                    <td style="font-size:20px;text-align:center;"><span t-esc="line.product_uom and line.product_uom.name or ''"/></td>
                                    <td style="font-size:20px;text-align:center;"></td>
                                    <!-- Quantity -->
                                    <td style="font-size:20px;text-align:center;"><span t-esc="line.product_uom_qty"/></td>
                                    
                                    <!-- Quantity Total -->
                                    <t t-set="total_qty" t-value="line.product_uom_qty + total_qty"/>
                                </tr>
                            </t>
                                <!-- QUANTITY TOTAL -->
                                
                                <!-- Total Heading -->
                                <tr>
                                    <td style="font-size:20px;text-align:center;"></td>
                                    <td style="font-size:20px;text-align:center;"></td>
                                    <td style="font-size:20px;text-align:center;"></td>
                                    <td style="font-size:20px;text-align:center;"></td>
                                    <td style="font-size:20px;text-align:center;"></td>
                                    <td style="font-size:20px;text-align:center;"></td>
                                    <td style="font-size:20px;text-align:center;"></td>
                                    <td style="font-size:20px;text-align:center;font-weight:bold;">Total</td>
                                </tr>
                                <!-- Total Quantity Number -->
                                <tr>
                                    <td style="font-size:20px;text-align:center;"></td>
                                    <td style="font-size:20px;text-align:center;"></td>
                                    <td style="font-size:20px;text-align:center;"></td>
                                    <td style="font-size:20px;text-align:center;"></td>
                                    <td style="font-size:20px;text-align:center;"></td>
                                    <td style="font-size:20px;text-align:center;"></td>
                                    <td style="font-size:20px;text-align:center;"></td>
                                    <td style="font-size:20px;text-align:center;">
                                        <span t-esc="total_qty"/>
                                        <span t-esc="o.move_ids_without_package.product_uom.name"/>
                                    </td>
                                </tr>
                                <!-- Total Quantity Words + Unit -->
                                <tr>
                                    <td style="font-size:20px;text-align:center;"></td>
                                    <td style="font-size:20px;text-align:center;"></td>
                                    <td style="font-size:20px;text-align:center;"></td>
                                    <td style="font-size:20px;text-align:center;"></td>
                                    <td style="font-size:20px;text-align:center;"></td>
                                    <td style="font-size:20px;text-align:center;"></td>
                                    <td style="font-size:20px;text-align:center;"></td>
                                    <td style="font-size:20px;text-align:center;">
                                        <span t-esc="o.qty_in_words"/>
                                        <span t-esc="o.move_ids_without_package.product_uom.name"/>
                                    </td>
                                </tr>
                        </tbody>
                    </table>
                </div>

                </div>
            </t>
            
            
            
            <t t-else="else" t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)" />
                <t t-set="partner" t-value="o.partner_id or (o.move_lines and o.move_lines[0].partner_id) or False"/>
                <t t-if="partner" name="partner_header">
                    <t t-set="address">
                        <div t-esc="partner"
                        t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True}'/>
                   </t>
                </t>

                <div class="page">
                    <h2>
                        <span t-field="o.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div t-if="o.origin" class="col-auto" name="div_origin">
                            <strong>Order:</strong>
                            <p t-field="o.origin"/>
                        </div>
                        <div t-if="o.state" class="col-auto" name="div_sched_date">
                            <strong>Shipping Date:</strong>
                            <t t-if="o.state == 'done'">
                                <p t-field="o.date_done" t-options='{"widget": "date"}'/>
                            </t>
                            <t t-if="o.state != 'done'">
                                <p t-field="o.scheduled_date" t-options='{"widget": "date"}'/>
                           </t>
                        </div>
                    </div>
                    <table class="table table-sm" t-if="o.state!='done'" name="stock_move_table">
                        <thead>
                            <tr>
                                <th name="th_sm_product"><strong>Product</strong></th>
                                <th name="th_sm_quantity"><strong>Quantity</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="lines" t-value="o.move_lines.filtered(lambda x: x.product_uom_qty)"/>
                            <tr t-foreach="lines" t-as="move">
                                <td>
                                    <span t-field="move.product_id"/>
                                    <p t-if="move.description_picking != move.product_id.description and move.description_picking != move.product_id.name">
                                        <span t-field="move.description_picking"/>
                                    </p>
                                </td>
                                <td>
                                    <span t-field="move.product_uom_qty"/>
                                    <span t-field="move.product_uom"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <table class="table table-sm mt48" t-if="o.move_line_ids and o.state=='done'" name="stock_move_line_table">
                        <t t-set="has_serial_number" t-value="o.move_line_ids.mapped('lot_id')" />
                        <thead>
                            <tr>
                                <th name="th_sml_product"><strong>Product</strong></th>
                                <th name="lot_serial" t-if="has_serial_number" groups="stock.group_lot_on_delivery_slip">
                                    Lot/Serial Number
                                </th>
                                <th name="th_sml_quantity" class="text-center"><strong>Quantity</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.move_line_ids" t-as="move_line">
                                <td>
                                    <span t-field="move_line.product_id"/>
                                    <p t-if="move_line.move_id.description_picking != move_line.product_id.description and move_line.move_id.description_picking != move_line.product_id.name">
                                        <span t-field="move_line.move_id.description_picking"/>
                                    </p>
                                </td>
                                <td t-if="has_serial_number and move_line.lot_name" groups="stock.group_lot_on_delivery_slip">
                                    <span t-field="move_line.lot_name"/>
                                </td>
                                <td t-elif="has_serial_number" groups="stock.group_lot_on_delivery_slip">
                                    <span t-field="move_line.lot_id.name"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="move_line.qty_done"/>
                                    <span t-field="move_line.product_uom_id"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <p>
                        <t t-if="o.backorder_ids and o.backorder_ids.filtered(lambda x: x.state not in ('done', 'cancel'))">
                            All items couldn't be shipped, the remaining ones will be shipped as soon as they become available.
                        </t>
                    </p>
                </div>
            </t>
         </t>
    </template>

    

    
    <!-- OUTGOING -->
    <template id="return_order_layout">
        <t t-if="not o" t-set="o" t-value="doc"/>
        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>

        <div t-attf-class="header o_company_#{company.id}_layout">
            <div class="o_boxed_header">
                <div class="row mb8">
                    <div class="col-6">
                        <!-- Company Logo -->
                       <div class="row" style="margin-top:30px;">
                            <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" alt="Logo" style="max-width: 300px; max-height: 250px;"/>
                        </div>
                        <!-- Company Address -->
                        <div class="row" style="margin-top:30px;">
                            <h4 class="mt0" t-field="o.company_id.report_header"/>
                            <div name="company_address" class="mb4" style="color:grey">
                                <span class="company_address" t-field="o.company_id.partner_id"
                                    t-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 mb4">
                    </div>
                </div>
            </div>
        </div>

        <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout"  t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-call="web.address_layout"/>
            <t t-raw="0"/>
        </div>

        <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
            <div class="text-center">
                
                
                    <p>All supplied products are under revision and inspection for 15 days from delivery جميع البضائع المورده تحت الفحص و الاستلام لمدة 15 يوم</p>
                <div class="row" style="margin-top:25px;margin-bottom:25px;">
                    <div class="col-3" style="text-align:left;">
                        <span><strong>Received by</strong></span>
                    </div>
                    <div class="col-3" style="text-align:center;">
                        <span><strong>Store Keeper</strong></span>
                    </div>
                    <div class="col-3" style="text-align:center;">
                        <span><strong>Security</strong></span>
                    </div>
                    <div class="col-3" style="text-align:center;">
                        <span><strong>Purchase Accounting</strong></span>
                    </div>
                </div>
                <div class="oe_clear"/>
                <div class="row" style="margin-top:60px;margin-bottom:20px;">
                    <div class="col-3" style="text-align:left;">
                        <span><strong>Name:</strong>_ _ _ _ _ _ _ _ _ _ _ _</span>
                    </div>
                    <div class="col-3" style="text-align:center;">
                        <span>_ _ _ _ _ _ _ _ _ _ _ _</span>
                    </div>
                    <div class="col-3" style="text-align:center;">
                        <span>_ _ _ _ _ _ _ _ _ _ _ _</span>
                    </div>
                    <div class="col-3" style="text-align:center;">
                        <span>_ _ _ _ _ _ _ _ _ _ _ _</span>
                    </div>
                </div>
                    
                <div class="row" style="margin-top:60px;margin-bottom:20px;">
                    <div class="col-3" style="text-align:left;">
                        <span><strong>ID:</strong>_ _ _ _ _ _ _ _ _ _ _ _</span>
                    </div>
                </div>
                    
                <div class="row" style="margin-top:60px;margin-bottom:20px;">
                    <div class="col-3" style="text-align:left;">
                        <span><strong>Signature:</strong>_ _ _ _ _ _ _ _ _ _ _ _</span>
                    </div>
                </div>
                
            <!-- Footer Info -->
            <div id="footer_information" class="row mt32 mb32" style="border-top:1px solid black;border-bottom:1px solid black;">
                <!-- Phone -->
                <div class="col-3 bm-2" style="margin-top:10px;margin-bottom:10px;">
                    <p>Phone: <span t-field="o.company_id.phone"/></p>
                </div>
                <!-- Email -->
                <div class="col-3 bm-2" style="margin-top:10px;margin-bottom:10px;">
                    <p>Email: <span t-field="o.company_id.email"/></p>
                </div>
                <!-- Website -->
                <div class="col-3 bm-2" style="margin-top:10px;margin-bottom:10px;">
                    <p>Website: <span t-field="o.company_id.website"/></p>
                </div>
                <!-- Sales TRN -->
                <div class="col-3 bm-2" style="margin-top:10px;margin-bottom:10px;">
                    <p>Sales TRN: <span t-field="o.company_id.vat"/></p>
                </div>
            </div>
            
                <!-- Footer Note -->
<!--                 <div style="margin-top:10px;">
                <p>if you have any questions concerning this invoice, contact our sales manager Mr. Mohamed Radwan, mob. 01223248892</p>
                <p>Allowed refund or change within 30 days from invoice date يحق الارتجاع أو الاستبدال في خلال 30 يوم من تاريخ الفاتورة</p>
                <h2 class="text-center">Thank You for Your Business</h2>
                </div> -->
                
            </div>
        </div>

    </template>
    
    <template id="report_return">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="egymentors_inventory.report_delivery_document" t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template>

</odoo>
